{
  "variables": {
    "token": "TOKEN",
    "image_name": "looselyhub-{{timestamp}}",
    "apt_packages": "nginx"
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `token`}}",
      "image": "ubuntu-20-04-x64",
      "region": "nyc1",
      "size": "s-1vcpu-2gb",
      "ssh_username": "root",
      "snapshot_name": "{{user `image_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "cloud-init status --wait",
        "mkdir /root/looselyhub",
        "mkdir /root/setup"
      ]
    },
    {
      "type": "file",
      "source": "./looselyhub/",
      "destination": "/root/looselyhub"
    },
    {
      "type": "file",
      "source": "./setup/",
      "destination": "/root/setup"
    },
    {
      "type": "shell",
      "inline": [
        "cd /root/setup/",
        "ls"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "setup/scripts/initial_setup.sh",
        "setup/scripts/nginx_setup.sh",
        "setup/scripts/packer90-cleanup.sh",
        "setup/scripts/packer99-img_check.sh"
      ]
    }
  ]
}
